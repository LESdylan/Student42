{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
            {
                "label": "gcc build",
                "type": "shell",
                "command": "/usr/bin/gcc",
                "args": [
                    "-g",               // Pour activer le d√©bogage avec les informations de source
                    "${file}",
                    "-o",
                    "${fileDirname}/a.out"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "problemMatcher": ["$gcc"],
                "detail": "Generated task for compiling C file"
            }
        ]
    }
    