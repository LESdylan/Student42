{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Debug C",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceFolder}/readability",  // Changez le nom de votre exécutable si nécessaire
                "args": [],
                "stopAtEntry": false,
                "cwd": "${workspaceFolder}",
                "environment": [],
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
                "miDebuggerPath": "/usr/bin/gdb",  // Assurez-vous que cela pointe vers votre gdb
                "preLaunchTask": "gcc build",      // Facultatif, si vous voulez une tâche avant le débogage
                "miDebuggerArgs": "",
                "sourceFileMap": {
                    "/usr/include": "${workspaceFolder}/include"
                },
                "logging": { "engineLogging": false }
            }
        ]
    }
    